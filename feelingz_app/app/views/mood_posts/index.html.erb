<p id="notice"><%= notice %></p>

<h1>Mood Posts</h1>

<table>
  <thead>
    <tr>
      <th>Img url</th>
      <th>Emotion</th>
      <th>Mood</th>
      <th>Journal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mood_posts.each do |mood_post| %>
      <tr>
        <td><%= mood_post.img_url %></td>
        <td><%= mood_post.emotion %></td>
        <td><%= mood_post.mood %></td>
        <td><%= mood_post.journal %></td>
        <td><%= link_to 'Show', mood_post %></td>
        <td><%= link_to 'Edit', edit_mood_post_path(mood_post) %></td>
        <td><%= link_to 'Destroy', mood_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mood Post', new_mood_post_path %>
